/*
* Css file to create the generic presentation
*/
@import "vendor/reveal"

/*
* In src/styl/highlight-themes have more awesome highlight-themes !!
*/
@import "highlight-themes/atelier-cave-dark"

body,
html,
.reveal
  font-family -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji !important
  font-weight 500

.reveal
  strong
    font-weight 800

  .red
    color red

  .small-size
    width: 60%

  code,
  pre
    font-family Inconsolata, Monaco, Menlo, Consolas, "Courier New", monospace !important

  code
    background-color #535353;
    border 1px solid #f7e1c7;
    border-radius 3px;
    font-size 80%
    padding 2px 6px
    display inline-block
